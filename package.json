{
  "name": "prettyprintcode",
  "displayName": "Pretty Print",
  "publisher": "ViktorLinden",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowflakemake/prettyprint"
  },
  "license": "MIT",
  "description": "Combining vscode-print and markdown-to-pdf to print in the most efficient and pretty way",
  "icon": "images/icon.png",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.prettyPrint",
        "title": "Pretty Print"
      }
    ],
    "configuration": {
      "title": "PrettyPrint",
      "properties": {
        "prettyprintcode.ignore": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/.git"
          ],
          "description": "Glob patterns for files and folders to ignore during print"
        },
        "prettyprintcode.fontSize": {
          "type": "number",
          "default": 16,
          "description": "Font size to use on the print"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "cheerio": "^1.0.0",
    "markdown-it": "^14.1.0",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-prism": "^3.0.0",
    "open": "^10.1.0"
  }
}
